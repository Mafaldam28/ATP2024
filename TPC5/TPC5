''' cinema = [sala]
sala = [nlugares, Vendidos, filme]
nlugares = int
filme = String
Vendidos = [Int]'''

def listar(cinema):
    for elem in cinema:
        print(str(elem[2]))
    return

def disponivel(cinema, filme, lugar):
    a = True
    for elem in cinema:
        if elem[2] == filme:
            if lugar in elem[1]:
                a = False
    return a

def vendebilhete(cinema, filme, lugar):
    for elem in cinema: 
        if elem[2] == filme:
            elem[1].append(lugar)
    return cinema 

def listardisponibilidades(cinema):
    for elem in cinema:
        print(elem[2])
        lugares = elem[0] - len(elem[1])
        print (lugares)
    return 
def inserirSala(cinema, sala):
    if sala not in cinema:
        cinema.append(sala)
    return cinema

op = 3
while op != 0:
    op = int(input("""(1) filmes disponiveis
    (2) lugares disponiveis
    (3) lugares ocupados
    (4) filme exibido na sala
    (5) sala do filme 
    (0) sair"""))
    if op == 1:
        listar(cinema) 
    if op == 2:
        disponivel(cinema, filme, lugar)
    if op == 3:
        vendebilhete(cinema, filme, lugar)
    if op == 4:
        listardisponibilidades(cinema)
    if op == 5:
        inserirSala(cinema, sala)
